BR2_TARGET_UBOOT_VERSION="custom"
# BR2_TARGET_UBOOT_CUSTOM_GIT=y
# BR2_TARGET_UBOOT_CUSTOM_REPO_URL="https://github.com/padiazg/licheepi-nano-u-boot.git"
# BR2_TARGET_UBOOT_CUSTOM_REPO_VERSION="2024.10-licheepi-nano"
BR2_TARGET_UBOOT_PATCH=""
